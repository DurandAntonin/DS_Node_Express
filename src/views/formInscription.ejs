<%- include("layout/debut.ejs") %>

<%- include("layout/navigation.ejs") %>

<main>
    <form action="formInscription" name="formInscription" method="post">
        <h2>Inscription</h2>

        <label for="login">Login</label>
        <input type="text" id="login" name="login" pattern="[a-zA-Z0-9\s]*" title="Veuillez ne pas utiliser de carractères spéciaux">

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" pattern="[a-zA-Z0-9\s]*" title="Veuillez ne pas utiliser de carractères spéciaux">

        <label for="password_confirm">Confirmez votre mot de passe</label>
        <input type="password" id="password_confirm" name="password_confirm" pattern="[a-zA-Z0-9\s]*" title="Veuillez ne pas utiliser de carractères spéciaux">

        <button type="submit">OK</button>

        <% if (errorMessage != null){ %>
            <p class="error"> <%= errorMessage %> </p>
        <% } %>
    </form>
</main>

