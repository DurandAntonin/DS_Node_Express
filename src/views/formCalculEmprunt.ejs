<%- include("layout/debut.ejs") %>

<%- include("layout/navigation.ejs") %>

<main>
    <h2>Formulaire de calcul des mensualités pour emprunt</h2>

    <form action="formEmprunt" name="form_emprunt" method="post">
        <label for="capital">Capital</label>
        <input type="number" id="capital" name="capital" min="1">

        <label for="taux">Taux (%)</label>
        <input type="number" id="taux" name="taux" step="0.01" min="0.01" max="100">

        <label for="duree">Duree (en année)</label>
        <input type="number" id="duree" name="duree" min="1">

        <button type="submit">OK</button>
        <% if (errorMessage != null){ %>
            <p class="error"> <%= errorMessage %> </p>
        <% } %>
    </form>
</main>

<%- include("layout/fin.ejs") %>
